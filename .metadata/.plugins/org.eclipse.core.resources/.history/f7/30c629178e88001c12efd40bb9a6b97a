<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	// 한글데이터 깨지지않게 인코딩 설정 바꾸기
	request.setCharacterEncoding("utf-8");
	String id = request.getParameter("id");
	String pw = request.getParameter("pw");
	String nickname = request.getParameter("nickname");
	String check = request.getParameter("auto");
	if(id.equals("kkk1234") && pw.equals("1111")){
		session.setAttribute("session_id", id);
		session.setAttribute("session_pw", pw);
		session.setAttribute("session_nickname", nickname);
		response.sendRedirect("session_welcome.jsp");
		if(check != null){
			Cookie login = new Cookie("auto_login", id);	
			login.setMaxAge(10);
			response.addCookie(login);
			}
	}
%>    
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>로그인 실패</title>
</head>
<body>
	<a href="session_login.jsp">로그인 창으로 돌아가기</a>
</body>
</html>